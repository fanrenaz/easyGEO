{
  "manifest_version": 3,
  "name": "独立站电商详情页Markdown生成器",
  "version": "1.0.0",
  "description": "从独立站电商网站的商品详情页提取信息并生成AI友好的markdown文件",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-style.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "提取独立站商品详情"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}