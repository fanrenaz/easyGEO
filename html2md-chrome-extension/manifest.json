{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "1.0.0",
  "description": "Convert HTML content to Markdown format",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "commands": {
    "convert-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Convert current page to markdown"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HTML to Markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2markdown.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png"
  }
}
